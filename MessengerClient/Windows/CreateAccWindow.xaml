<Window x:Class="MessengerClient.Windows.CreateAccWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerClient.Windows"
        mc:Ignorable="d"
        Title="CreateAccWindow" Height="450" Width="800"  MinHeight="450" MinWidth="800" MaxHeight="450" MaxWidth="800" Background="#1f1e1f">

    <Grid x:Name="RootGrid">
        <TextBlock x:Name="InfoTextBlock" Margin="0, 0, 0, 210" Width="210" Height="20" Visibility="Hidden" TextAlignment="Center"/>
        
        <Grid x:Name="FirstStage" Visibility="Visible">
            <TextBlock x:Name="EmailTextBlock" Text="Email:" Width="100" Height="20" Margin="0, 0, 90, 150"/>
            <TextBox x:Name="EmailTextBox" Width="200" Height="35"  Margin="0, 0, 0, 100"/>

            <TextBlock x:Name="PasswordTextBlock" Text="Password:" Width="100" Height="20" Margin="0, 0, 90, 0"/>
            <TextBox x:Name="PasswordTextBox" Margin="0, 50, 0, 0" Width="200" Height="35"/>
            <Button x:Name="RandomPasswordBtn" Style="{StaticResource BorderBtn}" FontSize="1" Content="🎲" 
                    Width="40" Height="35" Margin="247, 50, 0, 0"/>

            <TextBlock x:Name="DateOfBirth" Text="Date of birth:" Height="20" Width="95" Margin="0.5, 115, 0, 0"/>
            
            <ComboBox x:Name="DayBox" Width="50" Height="25" Margin="0, 160, 118, 0"/>
            <ComboBox x:Name="MonthBox" Width="50" Height="25" Margin="0, 160, 10, 0"/>
            <ComboBox x:Name="YearBox" Width="62" Height="25" Margin="110, 160, 3, 0"/>
            <!--#endregion-->

            <Button x:Name="ContinueBtn" Style="{StaticResource BorderBtn}" Background="#343234" 
                    Height="30" Width="75" Content="Continue" Margin="0, 250, 0, 0"/>
        </Grid>

        <TextBlock x:Name="GoBackBtn" Foreground="White" Background="Transparent" Text="🡨" HorizontalAlignment="Left" Height="30" Width="30" FontSize="28" Margin="10, 0, 0, 400"/>

        <Grid x:Name="SecondStage" Visibility="Collapsed">

            <Ellipse x:Name="ProfilPic" Width="80" Height="80" VerticalAlignment="Center" Margin="0, 0, 205, 105" RenderOptions.BitmapScalingMode="HighQuality" Cursor="Hand">
                <Ellipse.Fill>
                    <ImageBrush Stretch="UniformToFill"/>
                    </Ellipse.Fill>
            </Ellipse>

            <CheckBox  x:Name="TFACheckBox" VerticalAlignment="Center" Margin="0, 300, 280, 0" Width="20" Height="20"/>
            <TextBlock Text="Enable 2FA" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 300, 180, 0"/> 

            <TextBlock x:Name="UsernameTextBlock" Text="Username" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 0, 25, 120"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Height="40" Margin="100, 0, 0, 60" FontSize="18"/>

            <TextBlock x:Name="BiographyTextBlock" Text="Biography" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 30, 220, 20"/>
            <TextBox x:Name="BiographyTextBox" Width="300" Height="120" AcceptsReturn="True" VerticalScrollBarVisibility="Hidden" Margin="0, 170, 0, 20" FontSize="18"/>

            <Button x:Name="SignUpBtn" Style="{StaticResource BorderBtn}" Background="#343234" Height="35" Width="80" Content="Sign up" Margin="0, 350, 0, 20"/>
        </Grid>
    </Grid>
</Window>
