<Window x:Class="MessengerClient.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerClient"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"  MinHeight="450" MinWidth="800" MaxHeight="450" MaxWidth="800" Background="#1f1e1f">

    <Grid x:Name="RootGrid">
        <TextBlock x:Name="ErrorTextBlock" Foreground="Red" 
                   Margin="2, 0, 0, 200" Width="195" Height="20" Visibility="Hidden" TextAlignment="Center"/>

        <TextBlock x:Name="EmailTextBlock" Text="Email:" Width="100" Height="20" Margin="0, 0, 90, 150"/>
        <TextBox x:Name="EmailTextBox" Margin="0, 0, 0, 100" Width="200" Height="35"/>

        <TextBlock x:Name="PasswordTextBlock" Text="Password:" Width="100" Height="20" Margin="0, 0, 90, 0"/>
        <TextBox x:Name="PasswordTextBox" Margin="0, 50, 0, 0" Width="200" Height="35"/>

        <TextBlock FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 102, 0, 0">
            <Hyperlink x:Name="CreateAccHyperlink" Foreground="Black">
                No account? Create one here
            </Hyperlink>
        </TextBlock>
        
        <Button x:Name="LoginBtn" Style="{StaticResource BorderBtn}" Content="Login" Width="70" Height="30" Margin="0, 175, 0, 0"/>
    </Grid>
</Window>
