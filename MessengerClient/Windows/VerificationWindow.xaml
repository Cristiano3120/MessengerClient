<Window x:Class="MessengerClient.Windows.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessengerClient.Windows"
        mc:Ignorable="d"
        Title="Verify" Height="450" Width="800"  MinHeight="450" MinWidth="800" MaxHeight="450" MaxWidth="800" Background="#1f1e1f">
    <Grid x:Name="RootGrid">
        <TextBox x:Name="CodeTextBox" Width="200" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Margin="0, 100, 0, 0" MaxLength="8" TextAlignment="Center"/>
        <TextBlock x:Name="InfoTextBlock" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 100, 0, 60"/>

        <Button x:Name="VerifyBtn" Content="Verify" Width="70" Height="30" Style="{StaticResource BorderBtn}" Margin="0, 190, 0, 0"/>
    </Grid>
</Window>
